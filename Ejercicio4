import java.util.Scanner;
import java.text.DecimalFormat; 
 
public class Program {

  public static void main(String[] args) {

float peso;
float dolar;
double totalconvertido;
Scanner dinero = new Scanner(System.in);
DecimalFormat reducir = new DecimalFormat("0.0"); 

System.out.println("En cuanto cerro el dolar en la tasa de cambio e ingrese el valor actual: ");
dolar = dinero.nextFloat();

System.out.println("Ingrese la cantidad de pesos que desea convertir");
peso = dinero.nextFloat();

totalconvertido = peso * dolar;

System.out.println("El valor total convertido es $"+totalconvertido);


}
}

