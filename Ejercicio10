import java.util.Scanner;

public class Program {

    public static void main(String[] args) {
        double salud = 0.125;
        double pension = 0.16;
        double ibc, totals, totalp;
        Scanner teclado = new Scanner(System.in);
        System.out.println("Ingrese el valor del IBC: ");
        ibc = teclado.nextDouble();
        totals = (ibc*salud);
        totalp = (ibc*pension);
        System.out.println("El aporte de salud a pagar es de: $"+totals+". El aporte a pension es de: $"+totalp+".");
        System.out.println("De acuerdo al IBC ingresado que es de: $"+ibc+".");
    }
}
